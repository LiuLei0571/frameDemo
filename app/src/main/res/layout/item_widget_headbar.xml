<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlyt_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="@dimen/height_135"
            android:layout_height="match_parent"
            android:background="@drawable/item_selector"
            android:src="@drawable/ic_back"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/toolbar_back"
            android:layout_toLeftOf="@+id/toolbar_right"
            android:clickable="false"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_text_major"
            android:textSize="@dimen/size_major_middle"/>

        <LinearLayout
            android:id="@+id/toolbar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:minWidth="@dimen/height_135"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toolbar_right_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:textColor="@color/color_text_major"
                android:visibility="gone"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_light"/>
</LinearLayout>